# =====================================
# PHP 30-Day Challenge - .gitignore
# =====================================

# Ignore environment files (for future use)
.env
*.env

# Ignore PHP configuration or secrets files
config.php
*.config.php

# Ignore log files
*.log

# Ignore temporary files
*.tmp
*.temp

# Ignore system files
.DS_Store
Thumbs.db

# Ignore IDE/editor folders
.vscode/
.idea/
*.sublime-project
*.sublime-workspace

# Ignore composer/vendor dependencies if you use Composer in the future
/vendor/

# Ignore user-uploaded or generated data files
# Messages from guestbook apps
day*/messages.txt

# Any uploads folders inside day folders
day*/uploads/

# Ignore cache or session files (if any)
*.cache
*.session

# Optional: Ignore all backup files
*.bak
*.old
*.orig

# =====================================
# End of .gitignore
# =====================================
